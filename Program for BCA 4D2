Write python program to design calculator with following features:
a) basic arithmetic
b) scientific calculation
c) conversion in binary, octal, hexadecimal, decimal
d) temperature conversion
e) length conversion




import math

def basic_calculator():
    print("Basic Arithmetic Calculator")
    num1 = float(input("Enter the first number: "))
    op = input("Enter the operator (+, -, *, /): ")
    num2 = float(input("Enter the second number: "))
    
    if op == '+':
        print("Result:", num1 + num2)
    elif op == '-':
        print("Result:", num1 - num2)
    elif op == '*':
        print("Result:", num1 * num2)
    elif op == '/':
        if num2 != 0:
            print("Result:", num1 / num2)
        else:
            print("Error: Division by zero")

def scientific_calculator():
    print("Scientific Calculator")
    num = float(input("Enter a number: "))
    print("Square root:", math.sqrt(num))
    print("Sin:", math.sin(num))
    print("Cos:", math.cos(num))
    print("Tan:", math.tan(num))

def conversion_calculator():
    print("Conversion Calculator")
    choice = input("Choose conversion type:\n1. Binary\n2. Octal\n3. Hexadecimal\n")
    num = int(input("Enter a number: "))
    
    if choice == '1':
        print("Binary:", bin(num))
    elif choice == '2':
        print("Octal:", oct(num))
    elif choice == '3':
        print("Hexadecimal:", hex(num))
    else:
        print("Invalid choice")

def temperature_conversion():
    print("Temperature Conversion")
    temp = float(input("Enter temperature in Celsius: "))
    print("Temperature in Fahrenheit:", (temp * 9/5) + 32)
    print("Temperature in Kelvin:", temp + 273.15)

def length_conversion():
    print("Length Conversion")
    choice = input("Choose conversion type:\n1. Meters to Feet\n2. Feet to Meters\n")
    length = float(input("Enter length: "))
    
    if choice == '1':
        print("Length in feet:", length * 3.28084)
    elif choice == '2':
        print("Length in meters:", length / 3.28084)
    else:
        print("Invalid choice")

def main():
    while True:
        print("\nCalculator Menu:")
        print("1. Basic Arithmetic Calculator")
        print("2. Scientific Calculator")
        print("3. Conversion Calculator")
        print("4. Temperature Conversion")
        print("5. Length Conversion")
        print("6. Exit")
        
        choice = input("Enter your choice: ")
        
        if choice == '1':
            basic_calculator()
        elif choice == '2':
            scientific_calculator()
        elif choice == '3':
            conversion_calculator()
        elif choice == '4':
            temperature_conversion()
        elif choice == '5':
            length_conversion()
        elif choice == '6':
            print("Exiting...")
            break
        else:
            print("Invalid choice")

if _name_ == "_main_":
    main()
