        elif choice == '3':
            conversion_calculator()
        elif choice == '4':
            temperature_converter()
        elif choice == '5':
            length_converter()
        elif choice == '6':
            print("Exiting...")
            break
        else:
            print("Invalid choice!")

if __name__ == "__main__":
    main()
